{
  "name": "ZenChess - Anxiety Free Chess",
  "manifest_version": 3,
  "version": "1.1",
  "author": "art3mes",
  "description": "Removes all Elo ratings and other anxiety-inducing numbers so you can just play for fun. No more worrying.",
  "icons": {
    "16": "images/chess-16.png",
    "32": "images/chess-32.png",
    "48": "images/chess-48.png",
    "128": "images/chess-128.png"
  },
  "content_scripts": [
    {
      "js": ["script/content.js"],
      "matches": ["https://www.chess.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "ZenChess Settings"
  },
  "permissions": [
    "storage"
  ]
}
